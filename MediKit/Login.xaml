<Window x:Class="MediKit.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediKit"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label x:Name="lblUsuario" Content="Usuario" HorizontalAlignment="Left" Margin="156,106,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="156,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="358"/>
        <Label x:Name="lblPassword" Content="Contraseña" HorizontalAlignment="Left" Margin="156,179,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtContrasena" HorizontalAlignment="Left" Margin="156,220,0,0" VerticalAlignment="Top" Width="358"/>
        <Button x:Name="btnIngresar" Content="Ingresar" HorizontalAlignment="Left" Margin="296,293,0,0" VerticalAlignment="Top" Width="75" Click="btnIngresar_Click"/>

    </Grid>
</Window>
